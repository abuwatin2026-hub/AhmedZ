{
  "name": "ahmed-zenkah-trading",
  "version": "1.0.0",
  "description": "نظام مبيعات وإدارة لمؤسسة أحمد زنقاح للتجارة والتوكيلات.",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --max-old-space-size=8192 ./node_modules/vite/bin/vite.js",
    "dev:local": "node ./scripts/dev-local.mjs",
    "build": "node --max-old-space-size=16384 ./node_modules/vite/bin/vite.js build",
    "build:capacitor": "node --max-old-space-size=16384 ./node_modules/vite/bin/vite.js build --mode capacitor",
    "typecheck": "node --max-old-space-size=16384 ./node_modules/typescript/bin/tsc --noEmit",
    "preview": "vite preview",
    "test:ui:smoke": "playwright test --config=playwright.config.ts",
    "test:ui:smoke:headed": "playwright test --config=playwright.config.ts --headed",
    "test:ui:smoke:report": "playwright show-report",
    "deploy:pages": "npm run build && npx wrangler pages deploy dist --project-name ahmedzangah",
    "search": "node scripts/code-search.mjs",
    "sync": "npm run build:capacitor && node scripts/prepare-native-dist.mjs && npx capacitor sync android && node scripts/restore-web-dist.mjs && node scripts/verify-native-sync.mjs",
    "open": "npx capacitor open android",
    "assets": "capacitor-assets generate",
    "apk:publish": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"New-Item -ItemType Directory -Force -Path .\\public\\downloads | Out-Null; $src='.\\android\\app\\build\\outputs\\apk\\release\\app-release.apk'; if (!(Test-Path $src)) { $src='.\\android\\app\\build\\outputs\\apk\\release\\app-release-unsigned.apk' }; if (!(Test-Path $src)) { throw 'APK not found. Build android release first.' }; Copy-Item -Force -Path $src -Destination .\\public\\downloads\\ahmed-zenkah-trading-latest.apk\"",
    "db:link": "npx supabase link",
    "db:pull": "npx supabase db pull",
    "db:push": "npx supabase db push",
    "db:seed": "npx supabase db seed",
    "db:reset": "npx supabase db reset",
    "supabase:start": "npx supabase start",
    "supabase:stop": "npx supabase stop",
    "supabase:functions": "npx supabase functions serve create-admin-customer convert-party-to-customer create-admin-user reset-admin-password delete-admin-user --no-verify-jwt",
    "smoke:full": "node scripts/smoke-full.mjs",
    "smoke:party": "node scripts/smoke-full.mjs --sql supabase/smoke/smoke_party_ledger_full.sql --report SMOKE_PARTY_LEDGER_REPORT.md --ok-token PARTY_LEDGER_SMOKE_OK",
    "smoke:settlement": "node scripts/smoke-full.mjs --sql supabase/smoke/smoke_settlement_engine.sql --report SMOKE_SETTLEMENT_ENGINE_REPORT.md --ok-token SETTLEMENT_SMOKE_OK",
    "smoke:reporting": "node scripts/smoke-full.mjs --sql supabase/smoke/smoke_reporting_engine.sql --report SMOKE_REPORTING_ENGINE_REPORT.md --ok-token REPORTING_SMOKE_OK",
    "smoke:tamper": "node scripts/smoke-full.mjs --sql supabase/smoke/smoke_tamper_detection.sql --report SMOKE_TAMPER_DETECTION_REPORT.md --ok-token TAMPER_SMOKE_OK",
    "smoke:workflow": "node scripts/smoke-full.mjs --sql supabase/smoke/smoke_workflow_engine.sql --report SMOKE_WORKFLOW_ENGINE_REPORT.md --ok-token WORKFLOW_SMOKE_OK",
    "smoke:consolidation": "node scripts/smoke-full.mjs --sql supabase/smoke/smoke_consolidation.sql --report SMOKE_CONSOLIDATION_REPORT.md --ok-token CONSOLIDATION_SMOKE_OK",
    "smoke:budget": "node scripts/smoke-full.mjs --sql supabase/smoke/smoke_budgeting.sql --report SMOKE_BUDGETING_REPORT.md --ok-token BUDGET_SMOKE_OK"
  },
  "dependencies": {
    "@capacitor-community/file-opener": "^6.0.1",
    "@capacitor/app": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/filesystem": "^6.0.0",
    "@capacitor/haptics": "^6.0.0",
    "@capacitor/share": "^6.0.0",
    "@supabase/supabase-js": "^2.89.0",
    "bcryptjs": "^3.0.3",
    "exceljs": "^4.4.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.0.0",
    "qrcode": "^1.5.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^6.23.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^6.0.0",
    "@tailwindcss/forms": "^0.5.7",
    "@playwright/test": "^1.55.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.14.2",
    "@types/qrcode": "^1.5.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.19",
    "baseline-browser-mapping": "^2.9.18",
    "postcss": "^8.4.38",
    "supabase": "^2.39.2",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^7.0.0"
  },
  "overrides": {
    "tar": "6.2.1"
  }
}
