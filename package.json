{
  "name": "ahmed-zangah-app",
  "version": "1.0.4",
  "description": "نظام مبيعات وإدارة لمؤسسة أحمد زنقاح للتجارة والتوكيلات.",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "node --max-old-space-size=4096 ./node_modules/vite/bin/vite.js build",
    "build:capacitor": "node --max-old-space-size=4096 ./node_modules/vite/bin/vite.js build --mode capacitor",
    "typecheck": "node --max-old-space-size=8192 ./node_modules/typescript/bin/tsc --noEmit",
    "preview": "vite preview",
    "deploy:pages": "npm run build && npx wrangler pages deploy dist --project-name caty",
    "search": "node scripts/code-search.mjs",
    "sync": "npm run build:capacitor && node scripts/prepare-native-dist.mjs && npx capacitor sync android && node scripts/restore-web-dist.mjs && node scripts/verify-native-sync.mjs",
    "open": "npx capacitor open android",
    "assets": "capacitor-assets generate",
    "apk:publish": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"New-Item -ItemType Directory -Force -Path .\\public\\downloads | Out-Null; Copy-Item -Force -Path .\\android\\app\\build\\outputs\\apk\\release\\app-release.apk -Destination .\\public\\downloads\\caty-latest.apk\"",
    "db:link": "supabase link",
    "db:pull": "supabase db pull",
    "db:push": "supabase db push",
    "db:seed": "supabase db seed",
    "db:reset": "supabase db reset"
  },
  "dependencies": {
    "@capacitor-community/file-opener": "^6.0.1",
    "@capacitor/app": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/filesystem": "^6.0.0",
    "@capacitor/haptics": "^6.0.0",
    "@capacitor/share": "^6.0.0",
    "@supabase/supabase-js": "^2.89.0",
    "bcryptjs": "^3.0.3",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.0.0",
    "exceljs": "^4.4.0",
    "qrcode": "^1.5.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^6.23.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^6.0.0",
    "@tailwindcss/forms": "^0.5.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/qrcode": "^1.5.1",
    "@types/node": "^20.14.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "supabase": "^2.39.2",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^7.0.0"
  },
  "overrides": {
    "tar": "7.5.6"
  }
}
